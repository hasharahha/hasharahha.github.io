window.addEventListener("click", function(e){
  var clickX = e.pageX - world.offsetLeft;
  var clickY = e.pageY - world.offsetTop;
  var cx = Math.round(clickX/50) -1;
  var cy = Math.round(clickY/50) -1;
  if(coins >= 1&&selected < 10){
  layerB[cy][cx] =selected;
  coins -=1;
  }
  if(selected ==0&&layerB[cy][cx] >= 1){
    coins +=1;
  }
  shop();
  localStorage.setItem("coins", coins);
}, false);

window.addEventListener("mousemove", function(e){
  var mouseX = e.pageX - world.offsetLeft;
  var mouseY = e.pageY - world.offsetTop;
  sx = Math.round(mouseX/50) -1;
  sy = Math.round(mouseY/50) -1;
  ctx.rect(sx, sy, 50, 50);
}, false);
